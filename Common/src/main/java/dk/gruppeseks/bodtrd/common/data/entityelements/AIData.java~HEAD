package dk.gruppeseks.bodtrd.common.data.entityelements;

/**
 *
 * @author Frederik
 */
public class AIData
{
    private Position[] _path;
    private float[] _shape;
    private int _nextPosition;
    private long _creationTime;

    public AIData()
    {
        _creationTime = System.currentTimeMillis();
    }

    public void setPath(Position[] path)
    {
        _nextPosition = 0;
        _path = path;
    }

    public Position[] getPath()
    {
        return _path;
    }

    public void setFoVShape(float[] shape)
    {
        _shape = shape;
    }

    public float[] getFoVShape()
    {
        return _shape;
    }

    public long getCreationTime()
    {
        return _creationTime;
    }

    public Position peekPosition()
    {
        return _path[_nextPosition];
    }

    public int size()
    {
        return _path.length - _nextPosition;
    }

    public Position popPosition()
    {
        return _path[_nextPosition++];
    }

}
